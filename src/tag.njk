---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - tagList
    - nav
    - post
    - recipe
addAllPagesToCollections: true
renderData:
  title: Tagged “{{ tag }}”
permalink: /tag/{{ tag }}/
---

{% extends "./layouts/base.njk" %}

{% block bgBody %} bg-black-05 {% endblock %}

{% block main %}
<main class="max-w-5xl mx-auto leading-normal text-center">

    <section id="post-header" class="px-4 mt-8 lg:mt-12">
        <h1 class="inline-block px-6 py-2 rounded bg-blue-100 border-2 border-indigo-400 text-indigo-700">#{{ tag }}</h1>
    </section>
    <section class="my-8 lg:my-16 px-4">
        {% set postslist = collections[ tag ] %}
        <ul>
        {% for post in postslist | reverse %}
            <li class="py-3"><a href="{{post.url | url}}" class="text-black text-xl lg:text-2xl font-semibold border-b-2 border-indigo-100 py-1 hover:border-indigo-600 ">{{post.data.title}}</a></li>
        {% endfor %}
        </ul>
    </section>
</main>
{% endblock %}