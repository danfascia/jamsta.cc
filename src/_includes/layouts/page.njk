{% extends "./layouts/base.njk" %}

{% block main %}
<main class="max-w-5xl mx-auto mb-32 leading-normal">
    
    <section id="post-header" class="px-4 mt-8 lg:mt-12">
        <h1 class="my-8">{{title}}</h1>
    </section>
    
    <section id="content" role="main" class="w-full mx-auto">
        
        {% if featured_image %}
        <div class="aspect-ratio-21/9 my-12 mx-auto" style="background: url('{{featured_image}}') "></div>
        {% endif %}

        <div class="max-w-4xl mx-auto">
            {{content | safe }}
        </div>

    </section>
</main>
{% endblock %}